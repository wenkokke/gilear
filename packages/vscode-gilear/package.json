{
  "name": "vscode-gilear",
  "displayName": "Gilear",
  "description": "VSCode Extension for Gilear",
  "version": "0.0.0",
  "author": "Wen Kokke",
  "license": "AGPL-3.0-only",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTests.js"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.3.9",
    "mocha": "^10.3.0",
    "typescript": "^5.6.2",
    "which": "^5.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "gilear",
        "extensions": [
          ".gilear"
        ],
        "aliases": [
          "Gilear",
          "gilear"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "gilear.greet",
        "title": "Greet Gilear"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gilear",
      "properties": {
        "gilear.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "gilear.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  }
}
